<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileView">

    <LinearLayout
        android:id="@+id/uvpbg"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#293859"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/uep1"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/userprofilenew" />

    <TextView
        android:id="@+id/usep1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/uep1"
        android:layout_marginTop="15dp"
        android:text="PROFILE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="27dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/uvpbg">

        <ScrollView
            android:id="@+id/scrollviewlyout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="340dp"
                android:orientation="vertical"
                android:paddingBottom="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pdview">

                <EditText
                    android:id="@+id/uvpfname"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/usereditprofilelinear"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:hint="First Name"
                    android:text="" />

                <EditText
                    android:id="@+id/uvplname"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/uvpfname"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:hint="Last Name"
                    android:text="" />

                <EditText
                    android:id="@+id/uvpadd"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/uvplname"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:hint="Address"
                    android:text="" />

                <EditText
                    android:id="@+id/uvpmno"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/uvpadd"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:hint="Mobile No."
                    android:text="" />

                <EditText
                    android:id="@+id/uvpano"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/uvpmno"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:hint="Aadhar No."
                    android:text="" />

                <EditText
                    android:id="@+id/uvpn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/uvpano"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:hint="Nationality"
                    android:text="" />

                <EditText
                    android:id="@+id/uvpage"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/uvpn"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:hint="Age"
                    android:text="" />

                <EditText
                    android:id="@+id/uvpemail"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/uvpage"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:hint="Email" />


                <EditText
                    android:id="@+id/uvppass"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/uvpemail"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:hint="Password"
                    android:inputType="textPassword" />

                <Button
                    android:id="@+id/uvpupbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/uvppass"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="25sp"
                    android:text="UPDATE PROFILE" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>