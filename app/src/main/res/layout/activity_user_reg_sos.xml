<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRegSOS">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Type of Emergency"
        android:id="@+id/userregsostypeofemergency"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="Phone Number"
        android:id="@+id/userregsosphone"
        android:layout_below="@+id/userregsostypeofemergency"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/userregsosphone"
        android:layout_centerHorizontal="true"
        android:text="Location"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:id="@+id/userregsoslocation"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/userregsosdisplayloc"
        android:layout_below="@id/userregsoslocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/userregsosdisplayloc"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:layout_marginTop="25dp"
        android:id="@+id/userregsossubmit"
        />

</RelativeLayout>