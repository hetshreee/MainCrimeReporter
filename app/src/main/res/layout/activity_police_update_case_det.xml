<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoliceUpdateCaseDet">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rightarrow"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Case #1052150"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>


    <TextView
        android:id="@+id/vcname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:text="victim name:"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Space
        android:id="@+id/spaces"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/vcname"
        android:layout_marginTop="90dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/spaces"
        android:text="" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Crime scene location"
        android:layout_marginTop="130dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"/>

    <Space
        android:id="@+id/spaces2"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/vcname"
        android:layout_marginTop="130dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="130dp"
        android:layout_toRightOf="@+id/spaces2"
        android:text="" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Evidence"
        android:layout_marginTop="190dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"/>

    <Space
        android:id="@+id/spaces1"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/vcname"
        android:layout_marginTop="190dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/spaces1"
        android:layout_marginTop="190dp"
        android:text=""
        android:inputType="textMultiLine"
        android:id="@+id/pucevtv"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/puccon1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/pucevtv"
        android:orientation="vertical">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/gallery"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Reported by"
        android:layout_marginTop="500dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"/>

    <Space
        android:id="@+id/spaces3"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/vcname"
        android:layout_marginTop="500dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/spaces3"
        android:layout_marginTop="500dp"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="540dp"
        android:text="Status"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Space
        android:id="@+id/spaces4"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/vcname"
        android:layout_marginTop="540dp"/>

    <Spinner
        android:id="@+id/status"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:layout_toRightOf="@+id/spaces4"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:background="@color/grey"
        android:text="Save"
        android:textColor="@color/black"
        android:textSize="20dp" />


</RelativeLayout>