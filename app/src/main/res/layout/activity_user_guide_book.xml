<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserGuideBook">

    <LinearLayout
        android:id="@+id/gbl1"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#293859" >
    <!--Top Header Layout-->
    <LinearLayout
        android:id="@+id/pptopbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USER GUIDE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="25dp"/>
    </LinearLayout></LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp">
            <!--Top Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/userguidenew" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/guidelinearone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gbl1"
                android:layout_marginTop="50sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/guidebookthingtodo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Things to do"
                    android:textAlignment="center"
                    android:textSize="25dp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:text="1. Call your local police helpline, like 100."
                    android:textSize="18dp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:text="2. If someone is injured or has an life threatening wound, call an ambulance."
                    android:textSize="18dp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:text="3. Don't try to be a hero, call police immediately."
                    android:textSize="18dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/guidelineartwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/guidelinearone"
                android:layout_marginTop="55sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Things NOT to do"
                    android:textAlignment="center"
                    android:textSize="25dp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:text="1. Don't try to provide any first aid to the injured, unless you are a professional."
                    android:textSize="18dp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:text="2. Don't touch anything if you are at a crime scene."
                    android:textSize="18dp"></TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
