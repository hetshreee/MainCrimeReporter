<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoliceLogin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/police"
        android:id="@+id/ploginicon"/>


    <EditText
        android:id="@+id/ploginusername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ploginicon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:hint="Enter Email"
        android:text="" />

    <EditText
        android:id="@+id/ploginpassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ploginusername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:text="" />

    <TextView
        android:id="@+id/ploginforgotpass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ploginpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="Forgot Password?"
        android:textAlignment="textEnd" />

    <Button
        android:id="@+id/ploginsigninbtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ploginpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="SUBMIT" />


    <TextView
        android:id="@+id/ploginsignup"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ploginsigninbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Don't Have An Account? SIGN UP"
        android:textAlignment="textEnd"
        android:textAllCaps="true" />

</RelativeLayout>