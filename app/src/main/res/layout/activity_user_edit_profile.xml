<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserEditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usereditprofilelinear"
        android:orientation="vertical"
        android:layout_marginBottom="5sp"
        >
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usereditprofilespinneropt"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/usereditprofilefirstname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text=""
        android:hint="Enter First Name"
        android:layout_below="@+id/usereditprofilelinear"
        />

    <EditText
        android:id="@+id/usereditprofilelastname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usereditprofilefirstname"
        android:layout_marginTop="10sp"
        android:text=""
        android:hint="Enter Last Name"/>

    <EditText
        android:id="@+id/usereditprofileaddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:hint="Enter Address"
        android:layout_below="@+id/usereditprofilelastname"
        android:layout_marginTop="10sp"
        />

    <EditText
        android:id="@+id/usereditprofileemail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usereditprofileaddress"
        android:layout_marginTop="10sp"
        android:text=""
        android:hint="Enter Email"
        />

    <EditText
        android:id="@+id/usereditprofilenationality"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usereditprofileemail"
        android:layout_marginTop="10sp"
        android:text=""
        android:hint="Nationality"
        />

    <EditText
        android:id="@+id/usereditprofileaadhar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usereditprofilenationality"
        android:layout_marginTop="10sp"
        android:text=""
        android:hint="Enter Aadhar No" />

    <EditText
        android:id="@+id/usereditprofilephone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usereditprofileaadhar"
        android:layout_marginTop="10sp"
        android:text=""
        android:hint="Enter Phone" />

    <Button
        android:id="@+id/usereditprofiledatepickerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:textColor="@color/black"
        style="?android:spinnerStyle"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usereditprofilephone"
        android:layout_marginTop="10sp"
        android:onClick="openDatePicker"
        />

    <EditText
        android:id="@+id/usereditprofileusername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usereditprofiledatepickerbutton"
        android:layout_marginTop="10sp"
        android:text=""
        android:hint="Username"
        />

    <EditText
        android:id="@+id/usereditprofilepassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:layout_marginTop="10sp"
        android:layout_below="@id/usereditprofileusername"
        >
    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT"
        android:layout_below="@+id/usereditprofilepassword"
        android:layout_marginTop="15sp"
        />

</RelativeLayout>