<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserEditProfile">

    <ScrollView
        android:id="@+id/scrollviewlyout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="340dp"
            android:orientation="vertical"
            android:paddingBottom="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pdview">

            <LinearLayout
                android:id="@+id/usereditprofilelinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/uepicon"
                    android:layout_width="wrap_content"
                    android:layout_height="135dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profile" />

                <Spinner
                    android:id="@+id/usereditprofilespinneropt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:spinnerMode="dropdown"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/uepicon"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>

            <EditText
                android:id="@+id/usereditprofilefirstname"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usereditprofilelinear"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:hint="Enter First Name"
                android:text=""
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/usereditprofilelastname"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usereditprofilefirstname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:hint="Enter Last Name"
                android:text=""
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/usereditprofileaddress"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usereditprofilelastname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:hint="Enter Address"
                android:text=""
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/usereditprofileemail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usereditprofileaddress"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:hint="Enter Email"
                android:text=""
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/usereditprofilenationality"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usereditprofileemail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:hint="Nationality"
                android:text=""
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/usereditprofileaadhar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usereditprofilenationality"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:hint="Enter Aadhar No"
                android:text=""
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/usereditprofilephone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usereditprofileaadhar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:hint="Enter Phone"
                android:text=""
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/usereditprofileage"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usereditprofilephone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:hint="Age"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/usereditprofileusername"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usereditprofileage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:hint="Username"
                android:text=""
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/usereditprofilepassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/usereditprofileusername"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:layout_gravity="center" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usereditprofilepassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25sp"
                android:text="SUBMIT"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>