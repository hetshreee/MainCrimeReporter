<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserComplaint">


    <ImageView
        android:id="@+id/complaintcoverimage"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/evidence"

        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/complaintfloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/complaintcoverimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/camera" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/complaintcoverimage"
        >
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Complaint Name"
            android:textSize="25sp"
            android:id="@+id/complaintcomplaintname"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            ></EditText>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Complaint Description"
            android:textSize="25sp"
            android:layout_below="@+id/complaintcomplaintname"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/complaintdescription"
            ></EditText>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/complaintdescription"
            android:id="@+id/complaintsubmit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Submit"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>