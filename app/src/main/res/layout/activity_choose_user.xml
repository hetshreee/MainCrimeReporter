<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseUser">

    <TextView
        android:id="@+id/headingtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which One Are You?"
        android:textColor="@color/mainthemecolor"
        android:textStyle="bold"
        android:textSize="22dp"
        android:fontFamily="serif"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chhoseconstraint"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chhoseconstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toBottomOf="@+id/headingtxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:src="@drawable/police"
            android:scaleType="centerCrop"
            android:id="@+id/chooseuserpolice"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/policetxt"/>

        <TextView
            android:id="@+id/policetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Police"
            android:textSize="19dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="@color/mainthemecolor"
            app:layout_constraintTop_toBottomOf="@id/chooseuserpolice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/chooseuserpublic"/>


        <ImageView
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:src="@drawable/user"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/policetxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/chooseuserpublic"
            />

        <TextView
            android:id="@+id/usertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textSize="19dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_marginBottom="10dp"
            android:textColor="@color/mainthemecolor"
            app:layout_constraintTop_toBottomOf="@id/chooseuserpublic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>