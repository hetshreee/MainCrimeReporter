<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    tools:context=".PoliceCaseDet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Case Details"
        android:textColor="@color/black"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/pcdcasenoet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Case Number"
        android:textColor="@color/black"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/cdvicname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:text="Victim Name:"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cdvicnametv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/cdvicname"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cdcsloc"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:text="Crime Scene Location"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Space
        android:id="@+id/cdcslocsp"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_toRightOf="@+id/cdcsloc"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/cdcsloctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_toRightOf="@+id/cdcslocsp"
        android:text=""
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cde"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="190dp"
        android:text="Evidence"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Space
        android:id="@+id/cdesp"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_toRightOf="@+id/cde"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/cdetv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_toRightOf="@+id/cdesp"
        android:text=""
        android:textSize="20dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/puccon1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/cdetv"
        android:orientation="vertical">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/gallery"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/cdrep"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="500dp"
        android:text="Reported by"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Space
        android:id="@+id/cdrepsp"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_toRightOf="@+id/cdrep"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/cdreptv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_toRightOf="@+id/cdrepsp"
        android:text=""
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cdsts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="540dp"
        android:text="Status"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Space
        android:id="@+id/cdstssp"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:layout_toRightOf="@+id/cdsts"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/cdststv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:layout_toRightOf="@+id/cdstssp"
        android:text=""
        android:textSize="20dp" />

    <Button
        android:id="@+id/cdupbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:background="@color/grey"
        android:text="Update"
        android:textColor="@color/black"
        android:textSize="20dp" />
</RelativeLayout>