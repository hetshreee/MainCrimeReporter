<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoliceCaseDet">

    <LinearLayout
        android:id="@+id/pcd1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#293859"
        android:orientation="horizontal" />


    <ImageView
        android:id="@+id/pcd3"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/studycase" />

    <TextView
        android:id="@+id/pcd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pcd3"
        android:layout_marginTop="10dp"
        android:text="CASE DETAILS"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="27dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pcd1">

        <ScrollView
            android:id="@+id/pcd4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="340dp"
                android:orientation="vertical"
                android:paddingBottom="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pcd4">

                <LinearLayout
                    android:id="@+id/pcdl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="ENTER VICTIM NAME"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/pcdvicnameet"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:outlineSpotShadowColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pcdl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="DESCRIPTION"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/pcddescet"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:outlineSpotShadowColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pcdL6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="REPORTED BY"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/pcdrepet"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:outlineSpotShadowColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pcdL7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="STATUS"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/pcdstset"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:outlineSpotShadowColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pcdl3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="EVIDENCE"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pcdl4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pcdevim"
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/investigate"
                        android:text="EVIDENCE" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pcdl5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/pcdupbtn"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="95dp"
                        android:layout_marginTop="10dp"
                        android:text="UPDATE STATUS" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>