<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PoliceLogin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/man"
        android:layout_centerHorizontal="true"
        android:paddingTop="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:layout_below="@id/imageView"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/user"
        />

    <EditText
        android:id="@+id/userloginusername"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:hint="Enter Username"
        android:layout_below="@id/user"
        android:layout_marginTop="50sp"
        />

    <EditText
        android:id="@+id/userloginpassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@id/userloginusername"
        android:hint="Enter Password"
        android:layout_centerHorizontal="true"
        >
    </EditText>

    <Button
        android:id="@+id/userloginsignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userloginpassword"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Sign IN"
        android:layout_marginTop="50sp"
        />

    <Button
        android:id="@+id/userloginsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sign UP"
        android:layout_below="@id/userloginsignin"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>